@using MVCDersleri.Models.Entitiy
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategoriler>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @*verileri listelemek için foreach*@
        @foreach(var ktgr in Model)
            {
                <tr>
                    <th>@ktgr.Id</th>
                    <td>@ktgr.KategoriAd</td>
                    <td class="col-md-1"><a href="/Kategori/Sil/@ktgr.Id" class="btn btn-danger">Sil</a></td>
                    <td class="col-md-1"><a href="/Kategori/KategoriGetir/@ktgr.Id" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new {sayfa}))
<a href="/Kategori/YeniKategori/" class=" btn btn-primary">Yeni Kategori Ekle</a>

