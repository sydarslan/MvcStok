@model MVCDersleri.Models.Entitiy.Urunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" required="" maxlength="20" /> 
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="Marka" required="" />
    </div>
    <div>
        <label>Kategori Seçiniz </label>
        @Html.DropDownListFor(m=>m.Kategoriler.Id ,(List<SelectListItem>)ViewBag.dgr, new {@class="form-control"})
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Stok Adedi</label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün EKle</button>
    </div>
</form>


