@using MVCDersleri.Models.Entitiy
@model List<Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <p><b>Aranacak Müşteri Adı:</b> @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
                
            }
<table class="table table-bordered table-hover">
    <tr>
        <th>Müşteri Id</th>
        <th>Musteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach(var mus in Model)
            {
              <tr>
                  <td>@mus.Id</td>
                  <td>@mus.MusteriAd</td>
                  <td>@mus.MusteriSoyad</td>
                  @*<td class="col-md-1"><a href="/Musteri/Sil/@mus.Id" class="btn btn-danger">Sil</a></td>*@
                  <td>@Html.ActionLink("Sil", "Sil", new { id = mus.Id }, new {@class="btn btn-danger", onclick="return confirm('Silmek İstediğinizi Emin Misiniz?')"})</td>
                  <td class="col-md-1"><a href="/Musteri/MusteriGetir/@mus.Id" class="btn btn-success">Güncelle</a></td>
              </tr>
            }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>
